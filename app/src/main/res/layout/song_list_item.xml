<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/jishu_liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F1F2">

        <TextView
            android:id="@+id/jishu_num"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:shadowColor="#5C6BC0"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="1"
            android:textColor="#26A69A"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jishu_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:shadowColor="#87ACA8"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="奇数"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jishu_singer"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:shadowColor="#EC407A"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="奇数歌手"
            android:textColor="#26A69A"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/oushu_liner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/oushu_num"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:shadowColor="#5C6BC0"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="2"
            android:textColor="#26A69A"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/oushu_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:shadowColor="#87ACA8"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="偶数"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/oushu_singer"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:shadowColor="#EC407A"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="偶数歌手"
            android:textColor="#26A69A"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>
